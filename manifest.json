{
    "manifest_version": 3,
    "name": "netflix sub tools",
    "version": "0.1.0",
    "icons": {
        "128": "img/NST.128.png",
        "256": "img/NST.256.png"
    },
    "browser_action": {
        "default_icon": "img/NST.128.png",
        "default_title": "Netflix Sub Tools"
    },
    "description": "netflix sub tools",
    "permissions": ["activeTab"],
    "host_permissions": ["https://www.netflix.com/*"],
    "content_scripts": [
        {
            "matches": ["https://www.netflix.com/*"],
            "run_at": "document_start",
            "js": ["index.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["script.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["script.min.js"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["tools.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
